{
  "coc.preferences.jumpCommand": "tab drop",
  "python.linting.mypyEnabled": false,
  "python.linting.flake8Enabled": false,
  "python.linting.enabled": true,
  "python.jediEnabled": true,
  "htmldjango.enable": true,
  "htmldjango.djlint.indent": 2,
  "python.analysis.typeCheckingMode": "standard",
  "rust-analyzer.server.path": "/usr/local/bin/rust-analyzer",
  "rust-analyzer.diagnostics.disabled": ["unresolved-proc-macro"],

  "clangd.arguments": [
    "--clang-tidy",
    "--fallback-style=llvm",
    "--all-scopes-completion",
    "--log-verbose"
  ],
  "clangd.fallbackFlags": [
    "-std=C++20",
    "-I/usr/include",
    "-I/usr/local/include",
    "-I/usr/local/include/c++/14",
    "-I/usr/local/opt/llvm/include/c++/v1"
  ],
  "clangd.path": "~/.config/coc/extensions/coc-clangd-data/install/19.1.2/clangd_19.1.2/bin/clangd",

  "html.format.indentHandlebars": true,
  "html.format.templating": true
}
