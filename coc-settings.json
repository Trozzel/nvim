{
  "coc.preferences.jumpCommand": "tab drop",

  "outline.showLineNumber": false,
  "outline.detailAsDescription": false,
  "outline.previewBorderRounded": true,
  "outline.sortBy": "category",

  "python.linting.mypyEnabled": true,
  "python.linting.flake8Enabled": false,
  "python.linting.enabled": true,
  "python.jediEnabled": true,

  "rust-analyzer.inlayHints.parameterHints.enable": false,
  "rust-analyzer.inlayHints.closureStyle": "rust_analyzer",
  "rust-analyzer.inlayHints.typeHints.hideClosureParameter": true,
  "rust-analyzer.inlayHints.typeHints.enable": false,
  "rust-analyzer.check.command": "clippy",
  "rust-analyzer.inlayHints.maxLength": 5,

  "clangd.fallbackFlags": ["-std=C++23"],

  "inlayHint.enable": false,

  "[cpp]": {
    "inlayHint.enable": false
  },

  "yaml.schemas": {
    "kubernetes": "/*.yaml"
  },

  "html.format.indentHandlebars": true,
  "html.format.templating": true
}
